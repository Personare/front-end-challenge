{
  "name": "react-redux-boilerplate",
  "version": "0.0.1",
  "description": "React Redux projects",
  "scripts": {
    "start": "npm run dev",
    "dev": "node -r babel-register ./node_modules/.bin/webpack-dev-server --config ./webpack/dev.js --watch --colors",
    "build": "rimraf dist && NODE_ENV=production node -r babel-register ./node_modules/webpack/bin/webpack --config ./webpack/prod.js --progress --profile --colors",
    "test": "NODE_ENV=test ./node_modules/.bin/mocha --require tests/setup.js tests/specs/**/*.spec.js",
    "test:tdd": "npm test -- -w",
    "test:coverage": "NODE_ENV=test ./node_modules/.bin/nyc --reporter=html --reporter=text ./node_modules/.bin/mocha tests/setup.js tests/specs/**/*.spec.js",
    "lint": "./node_modules/.bin/eslint src",
    "lint:fix": "npm run lint -- --fix",
    "ci": "npm test && npm run lint",
    "prepush": "npm run ci"
  },
  "nyc": {
    "lines": 70,
    "check-coverage": true,
    "exclude": [
      "node_modules",
      "tests",
      "dist",
      "**/**/index.js"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^7.1.0",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.0.0",
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-plugin-webpack-alias": "^2.1.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "babel-types": "^6.24.1",
    "chai": "^4.1.0",
    "chai-enzyme": "^0.8.0",
    "classnames": "^2.2.5",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.28.1",
    "enzyme": "^2.8.2",
    "es6-promise": "^4.1.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.10.2",
    "eslint-plugin-jsx-a11y": "^2.0.0",
    "eslint-plugin-react": "^5.2.2",
    "extract-text-webpack-plugin": "^3.0.0",
    "fetch-mock": "^5.10.0",
    "html-webpack-plugin": "^2.28.0",
    "husky": "^0.13.3",
    "jsdom": "^9.11.0",
    "mocha": "^2.4.5",
    "postcss-discard-duplicates": "^2.1.0",
    "postcss-discard-unused": "^2.2.3",
    "postcss-loader": "^0.9.1",
    "react-test-renderer": "^15.5.4",
    "redux-mock-store": "^1.2.3",
    "rimraf": "^2.6.1",
    "script-ext-html-webpack-plugin": "^1.8.0",
    "sinon": "^2.2.0",
    "sinon-chai": "^2.10.0",
    "sinon-stub-promise": "^4.0.0",
    "style-loader": "^0.17.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "webpack": "3.3.0",
    "webpack-dashboard": "0.4.0",
    "webpack-dev-middleware": "^1.10.2",
    "webpack-dev-server": "^2.6.1",
    "webpack-hot-middleware": "^2.18.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/guilouro/react-redux-boilerplate.git"
  },
  "author": "Guilherme Louro",
  "dependencies": {
    "isomorphic-fetch": "^2.2.1",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-hot-loader": "^3.0.0-beta.6",
    "react-redux": "^5.0.4",
    "react-router": "^3.0.4",
    "react-router-redux": "^4.0.8",
    "redux": "^3.6.0",
    "redux-logger": "^3.0.6",
    "redux-promise-middleware": "^4.2.1",
    "redux-thunk": "^2.2.0"
  }
}
