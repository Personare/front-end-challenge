{
    "name": "front-end-challenge",
    "version": "1.0.0",
    "description": "> Desafio para os futuros front-end's do [@Personare](https://github.com/Personare)",
    "main": "index.js",
    "scripts": {
        "build": "webpack --mode production",
        "start": "webpack-dev-server --open --mode development ./src r",
        "test": "jest ./src --runInBand  --no-cache",
        "test:coverage": "jest --coverage",
        "test:watch": "npm run test -- --watch"
    },
    "jest": {
        "verbose": true,
        "coverageThreshold": {
            "global": {
                "branches": 80,
                "functions": 80,
                "lines": 80,
                "statements": 80
            }
        },
        "collectCoverageFrom": [
            "**/src/**/*.{js,jsx}",
            "!**/node_modules/**",
            "!**/*index.js"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/brunobc182/front-end-challenge.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/brunobc182/front-end-challenge/issues"
    },
    "homepage": "https://github.com/brunobc182/front-end-challenge#readme",
    "devDependencies": {
        "@babel/core": "^7.1.2",
        "@babel/preset-env": "^7.1.0",
        "@babel/preset-react": "^7.0.0",
        "babel-core": "^7.0.0-bridge.0",
        "babel-loader": "^8.0.4",
        "file-loader": "^2.0.0",
        "html-loader": "^0.5.5",
        "html-webpack-plugin": "^3.2.0",
        "react": "^16.5.2",
        "react-dom": "^16.5.2",
        "webpack": "^4.20.2",
        "webpack-cli": "^3.1.2",
        "webpack-dev-server": "^3.1.9"
    },
    "dependencies": {
        "axios": "^0.18.0",
        "babel-jest": "^23.6.0",
        "babel-preset-env": "^1.7.0",
        "babel-preset-react": "^6.24.1",
        "jest": "^23.6.0",
        "react-test-renderer": "^16.5.2",
        "styled-components": "^3.4.9"
    }
}
