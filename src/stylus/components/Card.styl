.Card
    display inline-block
    lost-column 1/6 6 20px
    margin-bottom 20px
    position absolute
    top 0;
    left 0;
    perspective 800px
    cursor pointer
    animation fadeIn 0.6s

    .is-disable &
        pointer-events none
        opacity 0.8

    .is-animation &
        transition transform 0.6s 0.3s ease-out

    +below(breakpoints.tablet)
        lost-column 1/6 6 20px

    +below(breakpoints.phone)
        lost-column 1/3 3 20px

    +below(breakpoints.smallPhone)
        lost-column 1/2 2 20px

.Card__wrapper
    height 0
    width 100%
    display block
    padding-bottom 190%
    position relative
    transform-style preserve-3d
    transition transform 0.6s ease-out

    .Card.flipped &
        transform rotateY(180deg);

.Card__side
    display block
    position absolute
    width 100%
    height 100%
    top 0
    left 0
    background #ffffff
    text-align center
    border-radius 10px
    backface-visibility hidden

    &.is-front
        padding 10px
        z-index 1

        +below(breakpoints.phone)
            padding 5px

    &.is-back
        transform rotateY(-180deg)


.Card__image
    display inline-block
    height 100%
    width auto


@keyframes fadeIn
    0% {
        opacity 0
    }

    100% {
        opacity 1
    }
